<Window x:Class="Lila.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lila"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="20,50,0,0" TextWrapping="Wrap" Text="Hello world!" VerticalAlignment="Top"/>
        <RadioButton x:Name="LeftButton" IsChecked="True" Content="Piggly"/>
        <RadioButton x:Name="RightButton" Content="Wiggly" Margin="116,0,-116,0"/>
        <Image Name="ImageViewerMain" Height="400" Width="400"/>
        <Button Content="Press here" Margin="377,270,0,0" Width="75" Height="25" Click="Button_Click"/>
        <Button Content="Choose Directory" Margin="-377,270,0,0" Width="100" Height="25" Click="BrowseButton_Click"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=30}" Name="FileListBox" Margin="-650,0,0,0" Height="350" Width="150" SelectionMode="Single"/>
        

    </Grid>
</Window>
